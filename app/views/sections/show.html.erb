<h1><%= @section.name%></h1>

<ul>
  <% @section.lessons.order(:number).each do |lesson| %>
    <li><a href="/sections/<%= @section.slug %>/lessons/<%= lesson.slug %>/"><%= lesson.name %></a></li>
  <% end %>
</ul>

<p><a href="/sections/<%= @section.slug %>/lessons/new">Add a new lesson to <%= @section.name %></a></p>

<button><a href="/chapters/<%= @section.chapter.slug %>/sections/<%= @section.slug %>/edit">Edit Section</a></button>
<button><a href="/sections/<%= @section.slug %>"
    data-confirm="Sure you want to delete this?"
    data-method="delete"
    rel="nofollow">Delete Section</a></button>

<p><a href="/sections">Return to Sections</a></p>
<p><a href="/">Return to the Table of Contents</a></p>
